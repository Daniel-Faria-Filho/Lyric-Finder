<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>CopyLyrics.net • Find and copy lyrics instantly</title>
    <meta name="description" content="CopyLyrics.net lets you find a song's lyrics fast and copy them to your clipboard in one click." />
    <meta name="theme-color" content="#0f0f12" />
    <link rel="canonical" href="https://copylyrics.net/" />
    <!-- Open Graph -->
    <meta property="og:title" content="CopyLyrics.net" />
    <meta property="og:description" content="Find lyrics instantly and copy to clipboard." />
    <meta property="og:type" content="website" />
    <meta property="og:url" content="https://copylyrics.net/" />
    <meta property="og:image" content="https://copylyrics.net/og.png" />
    <!-- Twitter -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content="CopyLyrics.net" />
    <meta name="twitter:description" content="Find lyrics instantly and copy to clipboard." />
    <meta name="twitter:image" content="https://copylyrics.net/og.png" />
    <link rel="icon" href="/favicon.png" type="image/png" />
    <link rel="stylesheet" href="/css/styles.css" />
  </head>
  <body>
    <header class="site-header">
      <div class="container">
        <a class="brand" href="/"><img src="/Logo-NoBg.png" alt="CopyLyrics.net" /></a>
        <nav style="margin-left:auto"><a href="/about">About</a></nav>
      </div>
    </header>

    <main class="container">
      <section class="card">
        <h1 class="title">Copy lyrics in one click</h1>
        <form class="search" action="/lyrics" method="post">
          <input
            class="input"
            type="text"
            name="song"
            placeholder="Type song name (optionally include artist)"
            value="<%= query?.song || '' %>"
            autocomplete="off"
            required
          />
          <button class="btn" type="submit">Get Lyrics</button>
        </form>

        <% if (error) { %>
          <div class="alert"><%= error %></div>
        <% } %>

        <% if (lyrics) { %>
          <div class="actions">
            <button id="copyBtn" class="btn secondary" data-copy-target="#lyrics">Copy Lyrics</button>
          </div>
          <pre id="lyrics" class="lyrics"><%= lyrics %></pre>
          <% if (typeof provider !== 'undefined' && provider) { %>
            <p class="muted" style="margin-top:8px">Source: <%= provider %></p>
          <% } %>
        <% } %>
      </section>
    </main>

    <footer class="site-footer">
      <div class="container">Made with ❤️ for quick copy — Made by <a href="https://danielfaria.cc" target="_blank" rel="noopener noreferrer">Daniel Faria</a></div>
    </footer>

    <script src="/js/app.js"></script>
  </body>
  </html>


